<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f7fc"
    tools:context=".Result">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/action_bar">

        // home button
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/home_button"
            android:src="@drawable/ic_home"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        // result
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R e s u l t"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    result card
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/action_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/result_card">

        // category
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/your_category"
            android:text="Category"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>

        // bmi text
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmi_txt_1"
            android:text="Your BMI score"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#605f5e"
            android:layout_below="@+id/your_category"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>

        // bmi value
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/your_bmi"
            android:text="23"
            android:textSize="70dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/bmi_txt_1"
            android:layout_centerHorizontal="true"/>

        // bmi unit
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bmi_txt_2"
            android:text="(kg/m2)"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#605f5e"
            android:layout_below="@+id/your_bmi"
            android:layout_centerHorizontal="true"/>

        // normal bmi
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/normal_txt_1"
            android:text="Normal BMI range"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#605f5e"
            android:layout_below="@+id/bmi_txt_2"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>

        // normal bmi range
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/normal_txt_2"
            android:text="18.5 - 25 kg/m2"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@+id/normal_txt_1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        // condition txt
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category_txt"
            android:text="You are"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#605f5e"
            android:layout_below="@+id/normal_txt_2"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"/>

        // condition
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/your_condition"
            android:text="Condition"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#4361ee"
            android:layout_below="@+id/category_txt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>